<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.StackPane?>

<StackPane alignment="TOP_CENTER"
           maxHeight="Infinity"
           maxWidth="Infinity"
           minHeight="0.0"
           minWidth="0.0"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ui.runner.components.instruction_table.InstructionTableController">

    <children>
        <TableView fx:id="table"
                   maxHeight="Infinity"
                   minHeight="0.0"
                   StackPane.alignment="TOP_CENTER">
            <columns>
                <TableColumn fx:id="lineCol"          prefWidth="-1.0" text="#line"/>
                <TableColumn fx:id="bsCol"            prefWidth="-1.0" text="B\S"/>
                <TableColumn fx:id="labelCol"         prefWidth="10.0" text="Label"/>
                <TableColumn fx:id="instructionCol"   minWidth="75.0" prefWidth="-1.0" text="Instruction"/>
                <TableColumn fx:id="cyclesCol"        prefWidth="15.0" text="Cycles"/>
                <TableColumn fx:id="archCol"          prefWidth="15.0" text="Architecture"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <StackPane.margin>
                <Insets bottom="5.0"/>
            </StackPane.margin>
        </TableView>
    </children>
</StackPane>
