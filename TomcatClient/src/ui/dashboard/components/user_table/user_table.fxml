<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ui.dashboard.components.user_table.UserTableController">
    <children>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="nameCol" text="User"/>
                <TableColumn fx:id="mainUploadedCol" text="#MainUploaded"/>
                <TableColumn fx:id="helperContribCol" text="#HelperContrib"/>
                <TableColumn fx:id="creditsCol" text="Credits"/>
                <TableColumn fx:id="spentCol" text="Spent"/>
                <TableColumn fx:id="runsCol" text="Runs"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <Button fx:id="uncheckBtn" text="Uncheck User"
                StackPane.alignment="BOTTOM_RIGHT">
            <StackPane.margin>
                <Insets bottom="12" right="12"/>
            </StackPane.margin>
        </Button>
    </children>
</StackPane>
