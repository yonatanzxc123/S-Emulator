<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" maxWidth="Infinity" minHeight="32" prefHeight="32" prefWidth="800" stylesheets="@file_line.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.dashboard.components.file_line.FileLineController">
   <columnConstraints>
      <ColumnConstraints prefWidth="164" />
      <ColumnConstraints hgrow="ALWAYS" prefWidth="394" />
      <ColumnConstraints prefWidth="117" />
      <ColumnConstraints halignment="LEFT" prefWidth="95" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints prefHeight="32" />
   </rowConstraints>

   <children>
      <Button fx:id="loadButton" maxWidth="Infinity" onAction="#onLoadFile" text="Load File Button" />

      <Label id="statusLabel" fx:id="status" maxHeight="1.7976931348623157E308" maxWidth="Infinity" text=" No File Loaded" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />

      <Button text="Charge Credits" GridPane.columnIndex="2" />
      <TextField fx:id="creditsTextBox" alignment="CENTER" maxHeight="1.7976931348623157E308" promptText="Enter Credits" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" />
   </children>
</GridPane>
