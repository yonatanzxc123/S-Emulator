<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="40.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.components.header.HeaderController">
   <children>
      <HBox alignment="TOP_CENTER" prefHeight="0.0" prefWidth="600.0">
         <children>
            <Label alignment="TOP_CENTER" minHeight="15.0" prefHeight="30.0" text="S-Emulator" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" fillHeight="false" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="600.0" spacing="20.0" stylesheets="@header.css">
         <children>
            <Button fx:id="loadFileBtn" maxHeight="Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#onActionLoadFile" text="Load File">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Label fx:id="loadFileLbl" maxHeight="Infinity" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="380.0" text="No file loaded yet" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="10.0" />
   </padding>
</VBox>
